  CREATE OR REPLACE FUNCTION "EJERCICIOS"."FT_FUNCION_1" (a number, b number, c number) Return Varchar As

lv_datos Varchar(255);

Begin 
  If b >=C Then 
    lv_datos:= a||'/'||(a*b)||'/'||'Andres';
  Else 
    lv_datos:= 'martinez';
  End If;
  
  Return lv_datos;
  
End ft_funcion_1;
